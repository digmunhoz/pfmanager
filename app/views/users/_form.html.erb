<%= form_for @user do |f| %>
  <% if @user.errors.any? %>
    <div class="alert alert-danger">
      <a href="#" class="close" data-dismiss="alert">&#215;</a>      
      <ul>
        <% @user.errors.full_messages.each do |msg| %>
        <li><%= msg %></li>
      <% end %>
      </ul>
    </div>
  <% end %> 
  <div class="col-lg-12">
        <div class="panel with-nav-tabs panel-default">
            <div class="panel-heading">
                    <ul class="nav nav-tabs">
                        <li class="active"><a href="#tab1default" data-toggle="tab">Information</a></li>
                        <!-- <li><a href="#tab2default" data-toggle="tab">Login</a></li> -->
                    </ul>
            </div>
            <div class="panel-body">
                <div class="tab-content">
                    <div class="tab-pane fade in active" id="tab1default">
                      <div class="control-group form-group">
                        <div class="input-group col-xs-4">
                          <span class="input-group-addon"><i class="fa fa-info-circle"></i></span>
                          <%= f.text_field :name, :maxlength=>32, class: "form-control", required: true, placeholder: "Full Name" %>
                        </div>
                      </div>
                      <div class="control-group form-group">
                        <div class="input-group col-xs-4">
                          <span class="input-group-addon"><i class="fa fa-user"></i></span>
                          <%= f.text_field :username, :maxlength=>20, class: "form-control", required: true, placeholder: "Username" %>
                        </div>
                      </div>                                   
                      <div class="control-group form-group">
                        <div class="input-group col-xs-4">
                          <span class="input-group-addon"><i class="fa fa-envelope"></i></span>
                          <%= f.email_field :email, class: "form-control", required: true, placeholder: "E-mail" %>
                        </div>
                      </div>               
                      <div class="control-group form-group">
                        <div class="input-group col-xs-4">
                          <span class="input-group-addon"><i class="fa fa-lock"></i></span>
                          <%= f.password_field :password, class: "form-control", required: true, placeholder: "Password" %>
                        </div>
                      </div>  
                      <div class="control-group form-group">
                        <div class="input-group col-xs-4">
                          <span class="input-group-addon"><i class="fa fa-lock"></i></span>
                          <%= f.password_field :password_confirmation, class: "form-control", required: true, placeholder: "Password Confirmation" %>
                        </div>
                      </div>
                    </div>

                    <!-- <div class="tab-pane fade" id="tab2default">Default 2</div> -->
                    <div class=clearfix">
                    <hr>
                      <div class="actions">
                        <a href="<%= users_path %>" class="btn btn-danger"><i class='fa fa-arrow-circle-left'></i> Back</a>
                        <%= f.submit "Send", class: "btn btn-primary pull-right" %>
                      </div>                        
                    </div>
                </div>
            </div>
        </div>
    </div>   
<% end %>